<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">230dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ContainerCadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="background">@drawable/container_components</item>
        <item name="android:layout_height">520dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="Edit_Text">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">16dp</item>
        <item name="android:maxLength">25</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/cinza</item>
        <item name="android:textColor">@color/cinza</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="text">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Descricao">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/cinza</item>
        <item name="android:textColor">@color/cinza</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:maxLength">130</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/button</item>
    </style>
</resources>