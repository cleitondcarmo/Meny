<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:orientation="vertical">

            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Status do pedido"
                android:textColor="@color/cor_principal"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white">

            <RadioButton
                android:id="@+id/rb_pendente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Pendente"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_preparacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Em preparação"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_saiu_entrega"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Saiu para entrega"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_entregue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Entregue"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rb_cancelado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/cor_principal"
                android:text="Cancelado"
                android:textColor="@color/black"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_fechar"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fechar"
                android:layout_margin="10dp"
                android:textAllCaps="false"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#F2F2F2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_salvar"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="Salvar"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>